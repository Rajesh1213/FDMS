      <h2><%= pluralize(@rent.errors.count, "error") %> prohibited this rent from being saved:</h2>

      <ul>
      <% @rent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="label-field-pair">
    <%= f.label :tenant_name %>
    <%= f.text_field :tenant_name %>
  </div>

    <div class="label-field-pair-text-area">
    <label for="address"> Permanent Address </label>
    <div class="textarea-input-bg"><%= f.text_area :permanent_address ,:cols => 27, :rows => 5 %></div>
  </div>

   <div class="label-field-pair-text-area">
    <label for="address"> Previous Residing Address </label>
    <div class="textarea-input-bg"><%= f.text_area :previous_residing_address ,:cols => 27, :rows => 5 %></div>
  </div>

  <div class="label-field-pair">
    <label> Mobile Number 1 </label>
    <%= f.text_field :phone %>
  </div>
  <div class="label-field-pair">
    <label> Mobile Number 2 </label>
    <%= f.text_field :mobile %>
  </div>
  
    <div class="label-field-pair">
    <%= f.label :email_id %>
    <%= f.text_field :email_id %>
  </div>

 <div><h4> Property Details: </h4></div> <br/><hr/>

  <div class="label-field-pair">
    <label> Select Availabe Property <span class="necessary-field">*</span> </label>
    <div class="text-input-bg"> <%= f.select 'add_property_id', options_for_select(@properties.collect{ |u| [u.house_number + ' ' +u.street_address, u.id] }), :prompt => "Select a property" %> </div>
  </div>
 
  <div class="label-field-pair">
    <%= f.label :signed_contract_date %>
    <%= f.calendar_date_select :signed_contract_date %>
  </div>

