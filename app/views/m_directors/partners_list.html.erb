<style>.box{width: 500px;margin: 0px auto;} #extender{ height: 100px;}
.listing_partners{margin:10px;padding: 5px; color:#3d3d3d; }
.dl-horizontal{border-bottom: 1px solid #ddd;}</style>
<div id="content-header">
  <%= image_tag('users-icon.jpeg') %>
  <h1> Managing Directors </h1>
  <h3> Listing Managing Director's - Partners  </h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'New Director', new_m_director_path %></li>
  </ul>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <br/>
  <div class="box">
    <% unless @m_director.photo.blank? or @m_director.photo.nil? %>
   <div style="text-align:center; "> <%= image_tag(@m_director.photo_url, :size => '125x125', :class => "thumbnail") %> </div>
 <% end %>
  
  <br/><br/>
  <div class="listing_partners"> List of (<%= @m_director.partners.count %>) Partners of <strong> <u> <%= @m_director.first_name+' '+@m_director.last_name %></u></strong></div>
  <ul >
      <% i = 0 %>
      <% @partners.each do |partner| %>
          <dl class="dl-horizontal">
          <dt><%= i = i.next %>. &nbsp; <%= partner.unique_id %> </dt>
          <dd><%=  (partner.first_name+' '+partner.last_name) %> </dd>
          </dl>
      </li>
      <% end %>

  </ul>

  </div>
</div>