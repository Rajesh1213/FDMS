    <%= f.label :contract_expiry_date %>
    <%= f.calendar_date_select :contract_expiry_date %>
  </div>

  <div class="label-field-pair">
    <label>Contract Period (In Months)<span class="necessary-field">*</span></label> 
    <%= f.text_field :contract_period %>
  </div>

  <div class="label-field-pair">
    <%= f.label :reneval_contract_date %>
    <%= f.calendar_date_select :reneval_contract_date %>
  </div>
  
  <div class="label-field-pair">
    <%= f.label :rent_per_month %>
    <%= f.text_field :rent_per_month %>
  </div>
   
  <div class="label-field-pair">
    <%= f.label :advance_taken %>
