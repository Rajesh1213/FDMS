<div id="content-header">
  <%= image_tag 'home.png' %> 
  <h1> Welcome </h1>
  <h3> Financial Data Management System </h3>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'New Finance outflow', new_finance_outflow_path %></li>
  </ul>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">     
<table class="table table-bordered ">
  <tr>
    <th>Amount</th>
    <th>Credited from</th>
    <th>Income type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @finance_outflows.each do |finance_outflow| %>
  <tr>
    <td><%= finance_outflow.amount %></td>
    <td><%= finance_outflow.credited_from %></td>
    <td><%= finance_outflow.income_type %></td>
    <td><%= link_to 'Show', finance_outflow %></td>
    <td><%= link_to 'Edit', edit_finance_outflow_path(finance_outflow) %></td>
    <td><%= link_to 'Destroy', finance_outflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

</div>
</div>
