  </div>

  <div class="label-field-pair">
    <%= f.label :security_doc_1 %>
    <%= f.text_field :security_doc_1 %>
  </div>
  <div class="label-field-pair">
    <%= f.label :security_doc_2 %>
    <%= f.text_field :security_doc_2 %>
  </div>
  <div class="label-field-pair">
    <%= f.label :security_doc_3 %>
    <%= f.text_field :security_doc_3 %>
  </div>

  <div class="label-field-pair">
    <%= f.label :reference %>
    <%= f.text_field :reference %>
  </div>

   <div class="label-field-pair-text-area">
    <label for="address"> Remarks </label>
    <div class="textarea-input-bg"><%= f.text_area :description,:cols => 27, :rows => 5 %></div>
  </div>

  <div class="actions">
    <%= f.submit :class=> "submit-button" %>
  </div>
<% end %>
